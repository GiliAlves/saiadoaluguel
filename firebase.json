{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/public/**",
        "destination": "/public.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [ {
      "source": "**/*.@(jpg|jpeg|gif|png|css|html|js)",
      "headers": [ {
        "key": "Cache-Control",
        "value": "max-age=7200"
      }]
    }]
  }
}
